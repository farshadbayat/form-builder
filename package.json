{
  "name": "ui-core-work-space",
  "version": "0.0.0",
  "scripts": {
    "start": "npm-run-all clean --parallel ui-core:watch ui-common ui-designer ui-bootstrap",
    "ui-core:watch": "ng build ui-core --watch --configuration development",
    
    "ui-common": "run-p ui-common:watch",
    "ui-common:watch": "wait-on dist/ui-core/package.json && ng build ui-common --watch --configuration development",
    
    "ui-bootstrap": "run-p ui-bootstrap:watch ui-bootstrap:sass",
    "ui-bootstrap:watch": "wait-on dist/ui-common/package.json && ng build ui-bootstrap --watch --configuration development",
    "ui-bootstrap:sass": "wait-on dist/ui-bootstrap/package.json && sass ./projects/ui/bootstrap/styles/core.scss dist/ui-bootstrap/assets/styles/core.css",
    
    "ui-designer": "run-p ui-designer:watch ui-designer:sass",
    "ui-designer:watch": "wait-on dist/ui-common/package.json && ng build ui-designer --watch --configuration development",
    "ui-designer:sass": "wait-on dist/ui-designer/package.json && sass ./projects/ui/designer/styles/core.scss dist/ui-designer/assets/styles/core.css",
    
    "showcase": " ng serve show-case -o --port 4205 --configuration development",
    "clean": "rimraf dist",
    "test:ui-core": "ng test ui-core",
    "test:ui-designer": "ng test ui-designer",
    "test:showcase": "ng test show-case"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.0",
    "@angular/cdk": "^15.2.0",
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/router": "^15.1.0",
    "bootstrap": "^5.3.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.5",
    "@angular/cli": "^16.0.3",
    "@angular/compiler-cli": "^15.1.0",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "typescript": "~4.9.4",
    "wait-on": "^7.0.1"
  }
}
